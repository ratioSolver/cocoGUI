{
    "compilerOptions": {
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "ESNext",
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}